{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
      "composite": true,
      "lib": ["ESNext"],
    "module": "Node16",
      "moduleResolution": "node16",
      "types": ["node"],
    "allowImportingTsExtensions": false,
      "paths": {
        "@shared/*": ["./shared/*"]
      }
  },
  "include": ["server/**/*", "shared/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "build", "client/**/*", "**/*.test.ts"]
}
